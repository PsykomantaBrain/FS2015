<modDesc descVersion="21">
   <author>HarvesteR</author>
    <title>
		<en>moreDrivingAxes</en>
    </title>
    <description>
        <en><![CDATA[Adds alternate axis bindings for steering and driving, so multiple devices can be mapped to these actions]]></en>
 	</description>
    <multiplayer supported="true"/>   
	<version>0.1</version>
	<l10n>
	<text name="AXIS_MOVE_FORWARD_VEHICLE_ALT_1">  <en>Drive Forward (alternate)</en>  </text>
	<text name="AXIS_MOVE_FORWARD_VEHICLE_ALT_2">  <en>Drive Reverse (alternate)</en>  </text>
	<text name="AXIS_MOVE_SIDE_VEHICLE_ALT_1">  <en>Steer Left (alternate)</en>  </text>
	<text name="AXIS_MOVE_SIDE_VEHICLE_ALT_2">  <en>Steer Right (alternate)</en>  </text>
	</l10n> 		
	<iconFilename>store.dds</iconFilename>
	<inputBindings>		
		<axis name="AXIS_MOVE_FORWARD_VEHICLE_ALT" category="VEHICLE" key1="" key2="" key3="" key4="" button="" axis="" device="0" invert="false" button1="" button2="" />
		<axis name="AXIS_MOVE_SIDE_VEHICLE_ALT" category="VEHICLE" key1="" key2="" key3="" key4="" button="" axis="" device="0" invert="false" button1="" button2="" />
	</inputBindings>			
	<extraSourceFiles>
        <sourceFile filename="moreDrivingAxes.lua" />
    </extraSourceFiles>	
</modDesc>